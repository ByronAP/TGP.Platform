{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/log-.txt", "rollingInterval": "Day" } }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=tgp;Integrated Security=true;TrustServerCertificate=True"
  },
  "ServiceUrls": {
    "Sso": "http://localhost:5201",
    "Gateway": "http://localhost:5010",
    "Reporting": "http://localhost:5117"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "TGP_Admin_",
    "Enabled": true,
    "DefaultExpirationMinutes": 30
  },
  "Jwt": {
    "SecretKey": "your-development-secret-key-here-make-it-long-enough",
    "Issuer": "TGP.SSO",
    "Audience": "TGP.Platform"
  },
  "Stripe": {
    "SecretKey": "",
    "PublishableKey": "",
    "WebhookSecret": ""
  }
}
